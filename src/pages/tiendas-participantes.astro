---
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";

import SideCharacter from "../components/SideCharacter.astro";

import locationIcon from "../assets/images/tiendas/Icono.png";
import chedraui from "../assets/images/tiendas/pleca chedraui3.png";
import todasLasSucursales from "../assets/images/tiendas/todas la sucursales_.png";
import cdmxEdoMex from "../assets/images/tiendas/ubicadaS en CDMX y  Estado de México_.png";
import CharacterImage from "../components/CharacterImage.astro";
---

<Layout
	title="Tiendas Participantes - Jumex Hydrolit"
	currentPage="/tiendas-participantes"
>
	<div class="h-full relative w-full">
		<div
			class="flex flex-col h-fit lg:h-full items-end lg:justify-center gap-8 lg:pl-80 relative z-80 pl-8"
		>
			<Image
				src={todasLasSucursales}
				alt="Todas las sucursales"
				height={120}
				class="px-8 mt-12"
			/>

			<Image src={chedraui} alt="Chedraui" height={150} />

			<div class="relative mr-2 md:mr-14">
				<div class="absolute -top-10 -left-28">
					<Image
						src={locationIcon}
						alt="Icono de ubicación"
						class="px-2 hidden sm:block"
						height={120}
					/>
				</div>

				<Image
					src={cdmxEdoMex}
					alt="UbicadaS en CDMX y  Estado de México"
					height={120}
					class="px-8 mb-8"
				/>
			</div>
		</div>
		<div class="relative
					flex
					justify-center
					lg:hidden">
			<CharacterImage position="left" />
		</div>

		<SideCharacter position="left" />
	</div>
</Layout>
