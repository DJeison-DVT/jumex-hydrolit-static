---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import SideCharacter from "../components/SideCharacter.astro";

import txt10 from "../assets/images/premio/10_.png";
import bullet from "../assets/images/premio/bullet.png";
import date from "../assets/images/premio/el 12 de Febrero de 2026  en el museo Júmex_.png";
import doublePasses from "../assets/images/premio/pases dobles_.png";
import txtPremios from "../assets/images/premio/podrás ganar  uno de los_.png";
---

<Layout title="Jumex Hydrolit - Inicio" currentPage="/">
	<div class="h-full relative w-screen overflow-x-hidden">
		<SideCharacter position="right" />
		<div class="flex flex-col h-full">
			<div
				class="relative flex-1 grid grid-cols-1 xl:grid-cols-4 pb-[575px] md:pb-0 space-y-4"
			>
				<div></div>
				<div
					class="flex flex-col pt-8 items-center md:justify-start md:absolute top-0 left-32 xl:left-60"
				>
					<Image
						src={txtPremios}
						alt="Podrás ganar uno de los"
						height={120}
					/>
				</div>
				<div
					class="flex justify-center items-center xl:col-span-2 z-80 lg:z-0"
				>
					<div class="relative max-w-xl xl:max-w-2xl">
						<!-- Bullet background -->
						<Image
							src={bullet}
							alt=""
							class="w-full h-auto hidden lg:block"
						/>

						<Image
							src={bullet}
							alt=""
							class="w-full block lg:hidden"
							height={180}
						/>

						<!-- txt10 positioned at top left of bullet -->
						<div
							class="absolute top-0 left-16 lg:left-32 p-4 lg:p-8"
						>
							<!-- Large version for md screens -->
							<Image
								src={txt10}
								alt="10"
								height={60}
								class="hidden lg:block"
							/>
							<!-- Small version for smaller screens -->
							<Image
								src={txt10}
								alt="10"
								height={30}
								class="block lg:hidden"
							/>
						</div>

						<!-- doublePasses centered on bullet -->
						<div
							class="absolute inset-0 flex items-center justify-center"
						>
							<!-- Large version for md screens -->
							<Image
								src={doublePasses}
								alt="Pases dobles para cenar con Paty Cantú"
								height={180}
								class="hidden lg:block"
							/>
							<!-- Small version for smaller screens -->
							<Image
								src={doublePasses}
								alt="Pases dobles para cenar con Paty Cantú"
								height={110}
								class="block lg:hidden"
							/>
						</div>
					</div>
				</div>
			</div>
			<div
				class="z-80 mx-auto lg:space-y-0 lg:space-x-4 mt-8 md:mt-0 px-2"
			>
				<div class="flex justify-center my-8">
					<Image src={date} alt="Fecha del premio" />
				</div>
			</div>
		</div>
	</div>
</Layout>
