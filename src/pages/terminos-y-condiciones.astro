---
import Layout from "../layouts/Layout.astro";
---

<Layout
	title="Términos y Condiciones - Jumex Hydrolit"
	currentPage="/terminos-y-condiciones"
>
	<div class="w-full h-full flex flex-col items-center p-4 md:p-8">
		<div
			class="w-full max-w-5xl flex-1 bg-white rounded-xl shadow-2xl overflow-hidden relative min-h-[70vh] flex flex-col"
		>
			<object
				data="/2025.11.24 Cena Paty Cantú - Hydrolit.pdf"
				type="application/pdf"
				class="w-full h-full flex-1"
			>
				<div
					class="flex flex-col items-center justify-center h-full p-8 text-center gap-6 bg-gray-50"
				>
					<p class="text-xl text-gray-700 font-medium">
						Tu navegador no puede mostrar este PDF directamente.
					</p>
					<a
						href="/2025.11.24 Cena Paty Cantú - Hydrolit.pdf"
						class="bg-[#dc841c] text-white px-8 py-3 rounded-full font-bold hover:opacity-90 transition-colors shadow-md"
						download
					>
						Descargar Términos y Condiciones
					</a>
				</div>
			</object>
		</div>

		<!-- Mobile friendly extra button -->
		<div class="mt-6 md:hidden">
			<a
				href="/2025.11.24 Cena Paty Cantú - Hydrolit.pdf"
				class="bg-white text-[#dc841c] px-8 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors shadow-lg flex items-center gap-2"
				target="_blank"
			>
				<span>Ver Documento PDF</span>
			</a>
		</div>
	</div>
</Layout>
